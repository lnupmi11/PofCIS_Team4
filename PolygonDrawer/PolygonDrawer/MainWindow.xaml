<Window x:Class="PolygonDrawer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Polygon Painter" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="New" Content="New" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="124" Click="New_Click" Height="20"/>
        <Button Grid.Column="0" x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="124" Click="Save_Click" Height="20"/>
        <Button Grid.Column="0" x:Name="Load" Content="Load" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="124" Click="Load_Click" Height="20"/>
        <Canvas SizeChanged ="Canvas_SizeChanged" x:Name="Canvas" Grid.Column="1" Margin="10" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Visibility="Hidden"/>

    </Grid>
</Window>
